server server01 {
listen {

	ipaddr = 0.0.0.0
	type = auth
	port = 1812
	limit {
	      max_connections = 16
	      lifetime = 0
	      idle_timeout = 30
	}
}
listen {
	ipaddr = 0.0.0.0
	port = 1813
	type = acct

	limit {
	}
}

listen {
	type = auth
	ipv6addr = ::
	port = 1812
#	interface = eth0
#	clients = per_socket_clients
	limit {
	      max_connections = 16
	      lifetime = 0
	      idle_timeout = 30
	}
}

listen {
	ipv6addr = ::
	port = 1813
	type = acct
#	interface = eth0
#	clients = per_socket_clients

	limit {
#		max_pps = 0
#		idle_timeout = 0
#		lifetime = 0
#		max_connections = 0
	}
}

authorize {
	filter_username
	filter_password
	preprocess
	chap
	mschap
	suffix
	expiration
	logintime
	sql
	pap

}


authenticate {
	Auth-Type PAP {
		pap
	}

	Auth-Type CHAP {
		chap
	}

	Auth-Type MS-CHAP {
		mschap
	}

	mschap
}

preacct {
	preprocess
	acct_unique
	suffix
}

accounting {
	update request {
		Subscription-Id := "%{sql:SELECT value FROM radcheck WHERE username='%{User-Name}' AND attribute='Subscription-Id'}"
	}
	sql
	exec
	attr_filter.accounting_response
}

session {
	sql
}
post-auth {
	update {
		&reply: += &session-state:
	}

	exec

	Post-Auth-Type REJECT {
		attr_filter.access_reject
	}

	sql
}


post-proxy {
}
}
